{
  "compilerOptions": {
    "moduleResolution": "node",
    "declaration": true,
    "target": "es2019",
    "module": "commonjs",
    "outDir": "lib",
    "pretty": true,
    "noEmitOnError": true,
    "experimentalDecorators": false,
    "sourceMap": true,
    "emitDecoratorMetadata": false,
    "strict": true,
    "esModuleInterop": true,
    "removeComments": true,
    "noUnusedLocals": true
  },
  "exclude": ["examples"],
  "include": ["./src/*.ts"]
}
